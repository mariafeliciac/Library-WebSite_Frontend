@model IEnumerable<Library.Web.Site.Models.ModelDto.BookDto.BookSearchResponse>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex flex-column align-items-center">
    <div>
        <h2>Search Book</h2>
        <br />
    </div>
    <div>
        <form asp-action="IndexPost" method="post">
            <div class="form-group">
                <label for="Title" class="control-label">Title</label>
                <input type="text" id="Title" name="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label for="AuthorName" class="control-label">AuthorName</label>
                <input type="text" id="AuthorName" name="AuthorName" class="form-control" />
            </div>
            <div class="form-group">
                <label for="AuthorSurname" class="control-label">AuthorSurname</label>
                <input type="text" id="AuthorSurname" name="AuthorSurname" class="form-control" />
            </div>
            <div class="form-group">
                <label for="PublishingHouse" class="control-label">PublishingHouse</label>
                <input type="text" id="PublishingHouse" name="PublishingHouse" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <input type="button" id="search" value="Search" class="btn btn-primary" />
            </div>
        </form>

    </div>

    <br />
    <br />
        <div>
            <h2>List of Books</h2>
            <br />
            </div>
    <div id="booksContainer">
        @{
            Html.RenderPartial("_SearchBook");
        }
    </div>
</div>
